@model ProfileViewModel
<div class="container">
    <div class="row">
        <div class="col s12 ">
            <div class="">

                

                <div class="card-content">
                    <div class="row  center ">
                        <div class="col s12 m4">


                            @if (Model.UserData.Avatar == null)
                            {
                                <img id="blah" class="circle" style="object-fit: cover;width:200px;height:200px;" src="~/img/img_avatar.png">
                            }
                            else
                            {
                                <img id="blah" class="circle" style="object-fit: cover;width:200px;height:200px;" src="data:image;base64,@(Convert.ToBase64String(Model.UserData.Avatar))">
                            }
                            <p>@Model.UserData.Email</p>
                            <p>@Model.UserData.PhoneNumber</p>
                        </div>
                        <div class="col s12 m8 ">
                            <h5>@Model.UserData.FirstName @Model.UserData.LastName</h5>
                            <hr />
                            @Html.Raw(Model.HtmlData)
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
</div>