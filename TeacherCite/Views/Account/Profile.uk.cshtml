@model ProfileViewModel
@{
    Layout = "ManagerLayout";
    ViewBag.Title = Model.UserData.UserName;
    ViewBag.Return = Model.returnUrl;

}

<div class="container">
    <div class="row">
        <div class="col s12 ">
            <div class="card ">

                <div class="card-title orange white-text center">
                    @Model.UserData.FirstName @Model.UserData.LastName
                    <span class="badge teal white-text">@(Model.Roles.First() == "Student" ? "Студент" : "Викладач")</span>
                </div>

                <div class="card-content">
                    <div class="row  center ">
                        <div class="col s12 m4">


                            @if (Model.UserData.Avatar == null)
                            {
                                <img id="blah" class="circle" style="object-fit: cover;width:200px;height:200px;" src="~/img/img_avatar.png">
                            }
                            else
                            {
                                <img id="blah" class="circle" style="object-fit: cover;width:200px;height:200px;" src="data:image;base64,@(Convert.ToBase64String(Model.UserData.Avatar))">
                            }
                            <p>@Model.UserData.Email</p>
                            <p>@Model.UserData.PhoneNumber</p>
                        </div>
                        <div class="col s12 m8 ">
                            @Html.Raw(Model.HtmlData)
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
</div>