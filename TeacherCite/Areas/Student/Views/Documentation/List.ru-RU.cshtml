@model DocsViewModel
@{ 
    Layout = "ManagerLayout";
    ViewBag.Title =Model.UserData.UserName + " документация";
    ViewBag.Return = Model.returnUrl;
}
<div class="container">
    <div class="row">

        @foreach (var Page in Model.Pages)
        {
            <div class="col s12" >
                <div class="card teal lighten-5 z-depth-3">
                    <div class="card-content ">
                        <span class="card-title">@Page.Name</span>
                        <span class="badge left orange-text"> @Page.Date.ToShortDateString() </span>
                        @Html.Raw((Page.GroupID == 0 ? $"<span class=\"badge orange\">Public  " : "<span class=\"badge yellow\">" + (Model.GroupName)) + "</span>")
                    </div>

                    <div class="card-action">
                        <a class="green-text" asp-action="ShowPage" asp-route-PageID="@(Page.DocPageID)" asp-route-returnUrl="@(Context.Request.Path+Context.Request.QueryString)">Выбрать</a>
                    </div>
                </div>
            </div>
        }
        </div>

    </div>